@model IEnumerable<Labbeh.Models.Drivers>

@{
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DriverCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LatitudeDefault)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongtitudeDefault)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriversCompaniesCat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DriverCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LatitudeDefault)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongtitudeDefault)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriversCompaniesCat.CompaniesType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverCompany.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
